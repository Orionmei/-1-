// задача 3 Гнатюк М.І
#include <stdio.h>

int main(void)
{
    int month, day;
    printf("Введіть номер місяця: ");
    scanf("%i", &month);
    switch(month){
        case 4: case 6: case 9: case 11: day = 30;
        printf("Кількість днів у місяці %d", day);
        break;
        case 2: day = 28;
        printf("Кількість днів у місяці %d", day);
        break;
        case 1: case 3: case 7: case 8 : case 10: case 12: day = 31;
        printf("Кількість днів у місяці %d", day);
        break;
        default : printf("Такого місяця немає");
    }
  
    }
  
